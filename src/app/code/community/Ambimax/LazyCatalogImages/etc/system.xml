<?xml version="1.0"?>
<config>
    <sections>
        <web>
            <groups>
                <lazycatalogimages tranlate="label comment">
                    <label>ambimaxÂ® LazyCatalogImages</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Replace Product Image Urls</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <base_url translate="label comment">
                            <label>Base Url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>i.E. https://cdn.ambimax.de/</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </base_url>
                        <use_square_images translate="label comment">
                            <label>Use Square Images</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>When no height is specified, width will be used as height</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </use_square_images>
                       <prevent_media_upload translate="label comment">
                            <label>Prevent Media Up-/Download</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Prevents AvS FastSimpleImport to move files into media/catalog/product folder</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </prevent_media_upload>
                    </fields>
                </lazycatalogimages>
            </groups>
        </web>
    </sections>
</config>
